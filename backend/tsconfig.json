{
  "compilerOptions": {
    "target": "ESNext",
    // "module": "NodeNext", // Commented because relative path imports dont work unless moduleResolution is bundler
    "moduleResolution": "bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
  }
}